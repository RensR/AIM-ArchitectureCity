
@using Framework.Models

@model System.Collections.Generic.IEnumerable<PluginDescription>
@{
    ViewData["Title"] = "Parser Listing";
}
<h2>Plugin List</h2>
<table class="ui compact celled definition table">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Description</th>
            <th>Author</th>
            <th>Version</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var plugin in Model)
        {
            <tr>
                <td class="collapsing">
                </td>
                <td>
                    <a href="/Plugins/Parser/Run/@plugin.ID">@plugin.Name</a>
                </td>
                <td>
                    @plugin.Description
                </td>
                <td>
                    @plugin.Author
                </td>
                <td>
                    @plugin.Version
                </td>
            </tr>
        }
    </tbody>
</table>
