@model IEnumerable<PluginDescription>
@{
    ViewData["Title"] = "Parser Listing";
}

    <h2>Plugin List</h2>

<div class="">
    <table class="ui inverted table">
        <thead>
        <tr>
            <th></th>
            <th>Description</th>
            <th>Author</th>
            <th>Version</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var plugin in Model)
        {
            <tr>
                <td>
                    <a href="/Plugins/Parser/Run/@plugin.ID">@plugin.Name</a>
                </td>
                <td>
                    @plugin.Description
                </td>
                <td>
                    @plugin.Author
                </td>
                <td>
                    @plugin.Version
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
